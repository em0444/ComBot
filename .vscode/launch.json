{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "/Applications/Webots.app/Contents/lib/controller/python/",
                "LD_LIBRARY_PATH": "/Applications/Webots.app/Contents/lib/controller",
                "WEBOTS_HOME": "/Applications/Webots.app"
            }
        },
        {
            "name": "Run My Program",
            "type": "cppdbg",   // or python, node, etc.
            "request": "launch",
            "program": "${workspaceFolder}/myapp",
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "/path/to/your/libs"
            }
        }
    ]
}